<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_normal">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:gravity="center_vertical">

        <ImageView android:id="@+id/product_photo"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/dimen_photo_card"
                   android:layout_weight="0.25"
                   android:scaleType="centerCrop"
                   android:background="@drawable/img_circle"
                   android:layout_marginRight="@dimen/dimen_item_margin"
                   android:contentDescription="@string/app_name"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.75">

            <TextView
                    android:id="@+id/labProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:text="@string/productName"
                    android:textSize="@dimen/dimen_big_text"/>

            <TextView
                    android:id="@+id/labProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/productDescription"
                    android:maxLines="1"/>

            <TextView
                    android:id="@+id/labProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/productPrice"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>